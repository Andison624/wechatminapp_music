<view class="personalContainer">
  <view class="user-section">
    <image class="bg" src="/pages/static/images/personal/bgImg2.jpg"></image>
    <view class="user-info-box" bindtap="toLogin">
      <view class="portrait-box">
        <image class="portrait" src='/pages/static/images/personal/missing-face.png'></image>
      </view>
      <view class="info-box">
        <text class="username">遊客</text>
      </view>
    </view>

    <view class="vip-card-box">
      <image class="card-bg" src="/pages/static/images/personal/vip-card-bg.png" mode=""></image>
      <view class="b-btn">
        立即開通
      </view>
      <view class="tit">
        <!-- 會員圖標-->
        <text class="iconfont icon-huiyuan-"></text>
        會員
      </view>
      <text class="e-m">atguigu Union</text>
      <text class="e-b">開通會員點擊我</text>
    </view>
  </view>


  <view class="cover-container" bindtouchstart="handleTouchStart" bindtouchmove="handleTouchMove" bindtouchend="hanldTouchEnd" style="transform: {{coverTransform}}; transition: {{coverTransition}};">
    <!--  -->
    <image class="arc" src="/pages/static/images/personal/arc.png"></image>
    <!-- 个人中心导航 -->
    <view class="nav-section">
      <view class="nav-item" hover-class="common-hover" hover-stay-time="50">
        <text class="iconfont icon-xiaoxi"></text>
        <text>我的消息</text>
      </view>
      <view class="nav-item" hover-class="common-hover" hover-stay-time="50">
        <text class="iconfont icon-myRecommender"></text>
        <text>我的好友</text>
      </view>
      <view class="nav-item" hover-class="common-hover" hover-stay-time="50">
        <text class="iconfont icon-gerenzhuye"></text>
        <text>個人主頁</text>
      </view>
      <view class="nav-item" hover-class="common-hover" hover-stay-time="50">
        <text class="iconfont icon-gexingzhuangban"></text>
        <text>個性裝扮</text>
      </view>
    </view>

    <!-- 个人中心列表 -->
    <view class="personalContent">
      <view class="recentPlayContainer">
        <text class="title">最近播放</text>
        <!-- 最近播放记录 -->
      </view>

      <view class="cardList">
        <view class="card-item">
          <text class="title">我的音樂</text>
          <text class="more"> > </text>
        </view>
        <view class="card-item">
          <text class="title">我的收藏</text>
          <text class="more"> > </text>
        </view>
        <view class="card-item">
          <text class="title">我的電台</text>
          <text class="more"> > </text>
        </view>
      </view>
    </view>
  </view>

</view>